@model List<RemTestSys.Domain.Models.Session>
@{
    ViewData["Title"] = "Незакриті сессії";
}

<h2>Незакриті сессії</h2>
@if (Model.Count() > 0)
{
    <div class="text-end">
        <a asp-action="ClearAll" class="btn btn-danger">Закрити всі сессії</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Учень</th>
                <th>Тест</th>
                <th>Початок сессії</th>
                <th>Статус</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Student.FullName</td>
                    <td>@item.Test.Name</td>
                    <td>@item.StartTime.ToString()</td>
                    <td>@(item.Finished?"Тест завершено":"Тест не завершено")</td>
                    <td><a asp-action="Close" asp-route-id="@item.Id" class="link-danger">Закрити</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Незакритих сессій не знайдено</p>
}

