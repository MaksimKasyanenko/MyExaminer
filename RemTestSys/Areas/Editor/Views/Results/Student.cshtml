@model IEnumerable<RemTestSys.Domain.Models.ResultOfTesting>

@{
    ViewData["Title"] = "Результати проходження тестів учня";
}

<h2>Результати проходження тестів учня</h2>
@if (Model.Count() > 0)
{
    <div class="text-end">
        <a asp-action="ClearForStudent" asp-route-id="@Model.First().Student.Id" class="btn btn-danger">Видалити ці результати</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Учень</th>
                <th>Тест</th>
                <th>Дата проходження</th>
                <th>Оцінка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Student.FullName</td>
                    <td>@item.Test.Name</td>
                    <td>@item.PassedAt.ToString()</td>
                    <td>@item.Mark.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Результатів немає</p>
}
