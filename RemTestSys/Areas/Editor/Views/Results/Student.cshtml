@model IEnumerable<RemTestSys.Domain.ViewModels.ExamResultViewModel>

@{
    ViewData["Title"] = "Результати проходження тестів";
}

<h2>Результати проходження тестів (@ViewData["StudentFullName"])</h2>
@if (Model.Count() > 0)
{
    <div class="text-end">
        <a asp-action="ClearForStudent" asp-route-id="@ViewData["StudentId"]" class="btn btn-danger">Видалити всі результати учня</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Тест</th>
                <th>Група</th>
                <th>Дата проходження</th>
                <th>Оцінка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestName <a asp-action="Test" asp-route-id="@item.TestId" class="link-secondary">&#10157;</a></td>
                    <td>@item.StudentGroupName <a asp-action="Group" asp-route-id="@item.StudentGroupId" class="link-secondary">&#10157;</a></td>
                    <td>@item.PassedAt.ToString()</td>
                    <td>@item.Mark.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Результатів не знайдено</p>
}
