@model IEnumerable<RemTestSys.Domain.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Учні";
}

<h2>Всі учні</h2>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Ім'я
                </th>
                <th>
                    Група
                </th>
                <th>
                    Дата реєстрації
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FullName
                    </td>
                    <td>
                        @item.GroupName
                    </td>
                    <td>
                        @item.RegistrationDate
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Не знайдено жодного учня</p>
}
