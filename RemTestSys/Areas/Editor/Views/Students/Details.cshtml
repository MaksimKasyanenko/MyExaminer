@model RemTestSys.Domain.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Деталі";
}

<h2>Інформація про учня</h2>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            Ім'я
        </dt>
