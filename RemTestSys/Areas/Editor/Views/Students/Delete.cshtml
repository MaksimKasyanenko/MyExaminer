@model RemTestSys.Domain.Models.Student

@{
    ViewData["Title"] = "Видалення учня";
}

<h2>Видалення учня</h2>
<p class="text-danger">Ви впевнені, що хочете видалити цього учня?</p>
<div class="col-md-4 mx-auto">
    <h4>Учень</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-2">
            Група
        </dt>
        <dd class="col-sm-10">
            @Model.Group.Name
        </dd>
        <dt class="col-sm-2">
            Дата реєстрації
        </dt>
        <dd class="col-sm-10">
            @Model.RegistrationDate
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="mb-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </div>
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
