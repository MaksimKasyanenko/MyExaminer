@model IEnumerable<RemTestSys.Domain.Models.Group>

@{
    ViewData["Title"] = "Відкрити доступ для груп";
}

<h2>Відкрити доступ для групи</h2>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Назва групи
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a asp-action="OpenAccessToTestForGroups" asp-controller="Accesses" asp-route-groupId="@item.Id" asp-route-testId="@ViewData["TestId"]">Відкрити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Не знайдено жодної групи</p>
}