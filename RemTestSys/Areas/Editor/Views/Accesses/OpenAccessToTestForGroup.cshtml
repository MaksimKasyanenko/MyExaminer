@model IEnumerable<RemTestSys.Domain.ViewModels.GroupViewModel>

@{
    ViewData["Title"] = "Відкрити доступ для груп";
}

<h2>Відкрити доступ для групи</h2>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Назва групи
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <form asp-action="OpenAccessToTestForGroup">
                            <input type="hidden" value="@item.Id" name="id" />
                            <input type="hidden" value="@ViewData["TestId"]" name="testId" />
                            <input type="submit" value="Відкрити доступ" class="btn btn-primary" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Не створено жодної групи</p>
}