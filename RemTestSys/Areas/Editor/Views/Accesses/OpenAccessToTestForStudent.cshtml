@model IEnumerable<RemTestSys.Domain.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Відкрити персональний доступ для учня";
}

<h2>Відкрити персональний доступ для учня</h2>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    ІД учня
                </th>
                <th>
                    Учень
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.FullName
                    </td>
                    <td>
                        <form asp-action="OpenAccessToTestForStudent">
                            <input type="hidden" value="@item.Id" name="id" />
                            <input type="hidden" value="@ViewData["TestId"]" name="testId" />
                            <input type="submit" value="Відкрити доступ" class="btn btn-primary" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-secondary">Не знайдено жодного учня</p>
}

