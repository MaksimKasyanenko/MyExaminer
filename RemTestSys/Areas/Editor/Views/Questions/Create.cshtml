@model RemTestSys.Areas.Editor.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Нове питання";
}

<h2>Нове питання</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Питання</label>
                <textarea asp-for="Text" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="SubText" class="control-label">Пояснення(необов'язково)</label>
                <textarea asp-for="SubText" class="form-control" rows="3"></textarea>
            </div>
            <h4>Відповідь</h4>
            <hr />
            
            
            <div class="mb-4">
            	<div>
            		<label><input type="radio" name="AnswerType" checked />Текст</label>
            		<div>
            			@Html.PartialAsync("~/Views/AnswerForms/SpecialSymbolsPanel.cshtml");
            			<input type="text" class="form-control" asp-for="RightText" id="textAnswerInpt" />
            			<script src="~/wwwroot/js/testing.js"></script>
            			<script>
            				window.addEventListener("load", function(){
            					registerSpecialPanel(document.getElementById("textAnswerInpt"));
            				});
            			</script>
            		</div>
            	</div>
            </div>
            
            
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

