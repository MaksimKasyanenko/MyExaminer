@model QuestionWithConnectedPairsAnswerViewModel
@{
    ViewData["Title"] = "Нове питання";
}

<h2>Нове питання</h2>
<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="CreateConnectedPairsAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @await Html.PartialAsync("_QuestionForm", ViewData["TestId"])
            <h4>Відповідь</h4>
            <hr />
            <div class="mb-4">
                @await Html.PartialAsync("_TypeOfAnswerPanel", ViewData["TestId"])

                



            </div>
            <div class="form-group text-center">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Details" asp-controller="Tests" asp-route-id="@ViewData["TestId"]">Назад</a>
</div>

