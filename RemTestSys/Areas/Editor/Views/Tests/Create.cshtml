@model RemTestSys.Domain.Models.Test

@{
    ViewData["Title"] = "Новий тест";
}

<h2>Новий тест</h2>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис(необов'язково)</label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Час на проходження тесту(сек.)</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <h4>Розподіл питань</h4>
            <hr />
            <p class="text-warning">Порядок не має значення, в тесті питання відсортовуються по колькості балів від найменшого.</p>
            <table>
                <thead>
                    <tr>
                        <th>Кількість питань</th>
                        <th>Бали за правильну відповідь</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="number" min="1" asp-for="MapParts.QuestionCount" /></td>
                        <td><input type="number" min="0" step="0.5" asp-for="MapParts.Cast" /></td>
                        <td><button type="button">Видалити</button></td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group">
                <label asp-for="QuestionsCount" class="control-label">Кількість питань</label>
                <input asp-for="QuestionsCount" class="form-control" />
                <span asp-validation-for="QuestionsCount" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

