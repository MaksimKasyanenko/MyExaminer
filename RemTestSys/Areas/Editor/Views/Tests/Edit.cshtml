@model RemTestSys.Domain.Models.Test

@{
    ViewData["Title"] = "Редагувати тест";
}

<h2>Редагування тесту</h2>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Час на проходження(сек.)</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>




            <h4>Розподіл питань</h4>
            <hr />
            <p class="text-warning">Порядок не має значення, в тесті питання відсортовуються по кiлькості балів від найменшого.</p>
            <table>
                <thead>
                    <tr>
                        <th>Кількість питань</th>
                        <th>Бали за правильну відповідь</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var part in Model.MapParts){
                    <tr>
                        <td><input type="number" min="1" name="MapParts_QuestionCount" value="@part.QuestionCount" /></td>
                        <td><input type="number" min="0" step="0.5" name="MapParts_Cast" value="@part.Cast" /></td>
                        <td><button type="button" onclick="this.parentElement.parentElement.remove();">Видалити</button></td>
                    </tr>
                }
                </tbody>
            </table>
            <button type="button" onclick="addMapPart();">+</button>
            <script>
                function addMapPart(){
                    let row = "<tr><td><input type='number' min='1' name='MapParts_QuestionCount' /></td>"+
                              "<td><input type='number' min='0' step='0.5' name='MapParts_Cast' /></td>"+
                              "<td><button type='button' onclick='this.parentElement.parentElement.remove();'>Видалити</button></td></tr>";
                    document.getElementByTagName("tbody").insertAdjacentHTML("beforeEnd", row);
                }
            </script>




            <div class="form-group text-center">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

